generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Invitado {
  id         Int              @id @default(autoincrement())
  nombre     String           @unique
  correo     String?
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt
  asistira   Boolean?
  comentario String?
  acompCount Int              @default(0)
  maxAcomp   Int              @default(0)
  estado     EstadoInvitado   @default(SIN_CONFIRMAR)
  invitadode invitadode_enum?
}

enum EstadoInvitado {
  SIN_CONFIRMAR
  CONFIRMO
  RECHAZO
  INACTIVO
}

enum invitadode_enum {
  Damaris
  Ernesto
}
