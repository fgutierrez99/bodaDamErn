datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum EstadoInvitado {
  SIN_CONFIRMAR
  CONFIRMO
  RECHAZO
  INACTIVO
}

model Invitado {
  id          Int             @id @default(autoincrement())
  nombre      String          @unique
  maxAcomp    Int             @default(0)

  // Confirmaci√≥n
  correo      String?
  asistira    Boolean?
  acompCount  Int             @default(0)
  comentario  String?

  estado      EstadoInvitado  @default(SIN_CONFIRMAR)

  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}
